{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "types": [
      "svelte"
    ],
    "moduleResolution": "node",
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "noEmit": true,
  "resolveJsonModule": true,
  "useDefineForClassFields": true,
  "strict": true,
  "skipLibCheck": true,
  "allowSyntheticDefaultImports": true,
  "importsNotUsedAsValues": "error"
}
